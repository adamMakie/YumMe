@page
@model IndexModel
@{
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<body class="bg-gray-200"> 
<div class="flex p-10">
    <div class="max-w-md w-full bg-white p-10 shadow-lg rounded-lg leading-normal">
            <div class="text-2xl font-light uppercase mb-6 ">Profile</div>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-5">
                    <input asp-for="Username" class="border p-3 rounded w-full focus:border-blue-500 focus:outline-none" placeholder="John"/>
                    <label asp-for="Username" class="text-sm mb-2 block text-gray-500"></label>
            </div>
            <div class="mb-5">
                    <input asp-for="Input.PhoneNumber" class="border p-3 rounded w-full focus:border-blue-500 focus:outline-none" placeholder="070*******" />
                    <label asp-for="Input.PhoneNumber" class="text-sm mb-2 block text-gray-500"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
                <button id="update-profile-button" type="submit" class="px-4 py-2 text-white  rounded hover:bg-blue-600" style=" background-color: dodgerblue;">Save</button>
        </form>
    </div>
</div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
