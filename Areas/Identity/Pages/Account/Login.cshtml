@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";}


<body class="bg-gray-200">
    <div class="flex h-screen items-center justify-center mt-8">
        <div class="bg-gray-100 p-10 rounded shadow-md w-1/4">
            <h2 class="text-2xl mb-6">Sign up</h2>       
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-red-600" role="alert"></div>
                    <div class="mb-4">
                        <label for="email" class="block mb-2 font-bold">Email</label>
                        <input id="email" asp-for="Input.Email" class="w-full px-3 py-2 border border-gray-300 rounded" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-red-600"></span>
                    </div>
                    <div class="mb-4">
                        <label for="password" class="block mb-2 font-bold">Password</label>
                        <input id="password" asp-for="Input.Password" class="w-full px-3 py-2 border border-gray-300 rounded" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-red-600"></span>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="px-4 py-2 text-black bg-blue-500 rounded hover:bg-blue-600">Log in</button>
                    </div>
                </form>
        </div>
    </div>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}